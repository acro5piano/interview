{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2015", "es2016", "es2017"],
    "strict": true,
    "noUnusedLocals": true,
    "paths": {
      "*": [ "./src/*" ]
    }
  },
  "include": [
    "./src/**/*",
    "./src/**/__tests__/*.test.ts"
  ]
}
